        {
          "name": "Sign Up",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "graphql",
              "graphql": {
                "query": "mutation SignUp($input: SignUpInput!) {\n  signUp(input: $input) {\n    token\n    user {\n      id\n      email\n      name\n    }\n  }\n}",
                "variables": {
                  "input": {
                    "email": "user@example.com",
                    "password": "password123",
                    "name": "Test User"
                  }
                }
              }
            },
            "url": {
              "raw": "http://localhost:4001/graphql",
              "protocol": "http",
              "host": ["localhost"],
              "port": "4001",
              "path": ["graphql"]
            }
          }
        },
