generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DeliveryAgent {
  id              String   @id @default(uuid())
  name            String
  email           String   @unique
  password        String
  isAvailable     Boolean  @default(true)
  currentLocation Json?
  currentOrderId  String?  @unique
  currentOrder    Order?   @relation("CurrentDelivery", fields: [currentOrderId], references: [id])
  orders          Order[]  @relation("DeliveryHistory")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model Order {
  id                    String         @id @default(uuid())
  status                OrderStatus    @default(PENDING)
  pickupAddress         String
  deliveryAddress       String
  deliveryAgent         DeliveryAgent? @relation("DeliveryHistory", fields: [deliveryAgentId], references: [id])
  deliveryAgentId       String?
  currentDelivery       DeliveryAgent? @relation("CurrentDelivery")
  estimatedDeliveryTime DateTime?
  deliveredAt           DateTime?
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @updatedAt
}

enum OrderStatus {
  PENDING
  ACCEPTED
  IN_DELIVERY
  DELIVERED
  CANCELLED
}
